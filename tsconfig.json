{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "checkJs": false,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/[lang]/faq/page.jsx", "app/[lang]/projects/[slug]/page.jsx", "app/[lang]/projects/[slug]/page.jsx", "app/[lang]/discography/page.jsx", "app/[lang]/projects/page.jsx", "app/[lang]/page.jsx"],
    "exclude": ["node_modules"]
}
